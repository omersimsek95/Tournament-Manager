<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@color/purple_500">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/white"/>
            <padding android:left="10dp"/>

        </shape>
    </item>
    <item android:state_pressed="false" >
    <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
        <stroke android:width="2dp" android:color="@color/green" />
        <corners android:radius="10dp" />
        <solid android:color="#7C21F1D8"/>
        <padding android:left="10dp"/>

    </shape>

    </item>

</selector>