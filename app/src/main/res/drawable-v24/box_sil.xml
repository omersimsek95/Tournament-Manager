<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@color/design_default_color_error">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#D7FF0000"/>


        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <stroke android:width="2dp" android:color="#E81919" />
            <corners android:radius="10dp" />
            <solid android:color="#F5FFFFFF"/>


        </shape>

    </item>
</selector>